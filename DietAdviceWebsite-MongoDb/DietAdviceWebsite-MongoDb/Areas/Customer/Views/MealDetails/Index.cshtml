@model DietAdviceWebsite_MongoDb.Models.Meal
<div class="container py-5">
    <!-- Added back button -->
    <a href="meal-management.html" class="back-btn">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M19 12H5M12 19l-7-7 7-7" />
        </svg>
        Quay về trang quản lý
    </a>

    <div class="row g-5 mt-3">
        <!-- Left column with image and tags -->
        <div class="col-md-6">
            <div class="food-image-container">
                <img id="mealImage" src="/placeholder.svg" alt="" class="img-fluid rounded shadow-sm w-100">

                <div class="mt-3" id="tagsContainer">
                    <!-- Tags will be inserted here -->
                </div>
            </div>
        </div>

        <!-- Right column with nutrition info and calculator -->
        <div class="col-md-6">
            <div class="food-info">
                <span class="badge bg-primary mb-2" id="mealCategory"></span>
                <h1 class="display-5 fw-bold text-dark" id="mealName"></h1>
                <p class="lead text-muted" id="mealDescription"></p>

                <hr class="my-4">

                <!-- Base nutrition values -->
                <h5 class="fw-bold mb-3">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="vertical-align: middle;">
                        <path d="M21.21 15.89A10 10 0 1 1 8 2.83"></path>
                        <path d="M22 12A10 10 0 0 0 12 2v10z"></path>
                    </svg>
                    Giá trị dinh dưỡng (Gốc)
                </h5>
                <div class="row text-center mb-4">
                    <div class="col-3">
                        <div class="nutrition-card bg-danger-subtle text-danger">
                            <span class="d-block fw-bold h4 mb-0" id="baseCalories">0</span>
                            <small>Calories</small>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="nutrition-card bg-primary-subtle text-primary">
                            <span class="d-block fw-bold h4 mb-0" id="baseProtein">0</span>
                            <small>Protein (g)</small>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="nutrition-card bg-warning-subtle text-warning">
                            <span class="d-block fw-bold h4 mb-0" id="baseCarbs">0</span>
                            <small>Carbs (g)</small>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="nutrition-card bg-success-subtle text-success">
                            <span class="d-block fw-bold h4 mb-0" id="baseFats">0</span>
                            <small>Fat (g)</small>
                        </div>
                    </div>
                </div>

                <!-- Calculator section -->
                <div class="card border-0 shadow-sm bg-light">
                    <div class="card-body p-4">
                        <h5 class="card-title fw-bold text-success mb-3">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="vertical-align: middle;">
                                <rect x="4" y="2" width="16" height="20" rx="2"></rect>
                                <line x1="8" y1="6" x2="16" y2="6"></line>
                                <line x1="8" y1="10" x2="16" y2="10"></line>
                                <line x1="8" y1="14" x2="16" y2="14"></line>
                                <line x1="8" y1="18" x2="16" y2="18"></line>
                            </svg>
                            Tính toán khẩu phần ăn
                        </h5>

                        <div class="row g-3 align-items-end">
                            <div class="col-md-4">
                                <label for="calQty" class="form-label fw-bold">Số lượng</label>
                                <input type="number" id="calQty" class="form-control form-control-lg" value="1" min="0.1" step="0.1">
                            </div>

                            <div class="col-md-8">
                                <label for="calUnit" class="form-label fw-bold">Đơn vị</label>
                                <select id="calUnit" class="form-select form-select-lg">
                                    <option value="1">Gram (mặc định)</option>
                                </select>
                            </div>
                        </div>

                        <div class="mt-4 pt-3 border-top d-flex justify-content-between align-items-center">
                            <span class="text-muted">Tổng năng lượng nạp vào:</span>
                            <div class="text-end">
                                <span id="totalResult" class="display-4 fw-bold text-success">0</span>
                                <span class="fs-5 text-muted">kcal</span>
                            </div>
                        </div>

                        <div class="text-end text-muted small mt-1">
                            Tương đương: <span id="totalPro">0</span>g Protein,
                            <span id="totalCarbs">0</span>g Carbs,
                            <span id="totalFats">0</span>g Fat
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/css/meal-details.css">

@section Scripts {
    <script>
        const baseNutrition = {
            calories: @Model.Nutrition.Calories,
            protein: @Model.Nutrition.Protein,
            carbs: @Model.Nutrition.Carbs,
            fats: @Model.Nutrition.Fats
        };

        // Kiểm tra xem món ăn có units không
        const hasUnits = @(Model.Units != null && Model.Units.Count > 0 ? "true" : "false");
    </script>

    <script src="~/js/meal-details.js"></script>
}