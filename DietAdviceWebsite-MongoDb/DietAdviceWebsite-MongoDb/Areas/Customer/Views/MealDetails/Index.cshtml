@model DietAdviceWebsite_MongoDb.Models.Meal

<div class="container py-5">
    <a href="javascript:history.back()" class="back-btn">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M19 12H5M12 19l-7-7 7-7" />
        </svg>
        Quay về danh sách
    </a>

    <div class="meal-header">
        <!-- CỘT TRÁI: ẢNH (30%) -->
        <div class="meal-image">
            <div class="food-image-wrapper">
                <img src="@Model.ImageUrl" alt="@Model.Name">
            </div>
        </div>

        <!-- CỘT PHẢI: THÔNG TIN (70%) -->
        <div class="meal-info">

            <div class="meta-badges">
                <span class="badge badge-category">
                    @Model.Category
                </span>
                <div class="meal-types">
                    @if (Model.MealTypes != null)
                    {
                        foreach (var type in Model.MealTypes)
                        {
                            <span class="badge badge-meal-type">@type</span>
                        }
                    }
                </div>
            </div>

            <h1 class="food-title display-6">@Model.Name</h1>
            <p class="food-desc">@Model.Description</p>

            <hr class="my-4 text-muted opacity-25">

            <h5 class="fw-bold mb-3 text-secondary">
                <i class="fas fa-fire me-2"></i>Dinh dưỡng (Gốc)
            </h5>

            <div class="nutrition-grid">
                <div class="nutri-box n-cal">
                    <span class="nutri-val" id="baseCalories">@Model.Nutrition.Calories</span>
                    <span class="nutri-label">Kcal</span>
                </div>
                <div class="nutri-box n-pro">
                    <span class="nutri-val" id="baseProtein">@Model.Nutrition.Protein</span>
                    <span class="nutri-label">Pro (g)</span>
                </div>
                <div class="nutri-box n-carb">
                    <span class="nutri-val" id="baseCarbs">@Model.Nutrition.Carbs</span>
                    <span class="nutri-label">Carb (g)</span>
                </div>
                <div class="nutri-box n-fat">
                    <span class="nutri-val" id="baseFats">@Model.Nutrition.Fats</span>
                    <span class="nutri-label">Fat (g)</span>
                </div>
            </div>

            @if (Model.Tags != null && Model.Tags.Count > 0)
            {
                <div class="tag-cloud mt-3">
                    <h6 class="fw-bold text-muted mb-2 small text-uppercase">Tags liên quan:</h6>
                    @foreach (var tag in Model.Tags)
                    {
                        <span class="badge rounded-pill">#@tag</span>
                    }
                </div>
            }
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-lg-8 mx-auto">

            <div class="calculator-card">
                <div class="calc-header">
                    <h4 class="fw-bold text-success m-0">
                        <i class="fas fa-calculator me-2"></i>Tính khẩu phần
                    </h4>
                </div>

                <div class="calc-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold small text-muted text-uppercase">
                            Số lượng & Đơn vị
                        </label>

                        <div class="qty-group">
                            <input type="number" id="selQty" value="1" min="0.1" step="0.1"
                                   class="form-control form-control-lg text-center fw-bold"
                                   style="width: 100px;">

                            <select id="selUnit"
                                    class="form-select form-select-lg fw-bold">
                                @if (Model.Units != null && Model.Units.Count > 0)
                                {
                                    for (int i = 0; i < Model.Units.Count; i++)
                                    {
                                        <option value="@i">@Model.Units[i]</option>
                                    }
                                }
                                else
                                {
                                    <option value="gram">Gram</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="calc-preview">
                        <div class="text-muted small mb-1">Tổng năng lượng nạp vào</div>
                        <div id="totalResult">@Model.Nutrition.Calories</div>
                        <div class="fs-6 fw-bold text-muted">kcal</div>

                        <hr class="my-3 mx-auto w-50 opacity-25">

                        <div class="macro-mini">
                            <span id="totalPro">@Model.Nutrition.Protein</span>g Pro &bull;
                            <span id="totalCarbs">@Model.Nutrition.Carbs</span>g Carb &bull;
                            <span id="totalFats">@Model.Nutrition.Fats</span>g Fat
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>

<link rel="stylesheet" href="~/css/meal-details.css">

@section Scripts {
    <script>
        const baseNutrition = {
            calories: @Model.Nutrition.Calories,
            protein: @Model.Nutrition.Protein,
            carbs: @Model.Nutrition.Carbs,
            fats: @Model.Nutrition.Fats
            };
        const hasUnits = @(Model.Units != null && Model.Units.Count > 0 ? "true" : "false");
        const mealUnits = @Html.Raw(Json.Serialize(Model.Units ?? new List<string>()));
    </script>

    <script src="~/js/meal-details.js" asp-append-version="true"></script>
}