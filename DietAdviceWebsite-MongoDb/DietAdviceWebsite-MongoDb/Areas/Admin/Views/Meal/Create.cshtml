@model DietAdviceWebsite_MongoDb.Models.Meal

@{
    ViewData["Title"] = "Thêm Món Ăn Mới";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="~/css/admin-styles.css" />

<style>
    .checkbox-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 15px;
        background: #fff;
        padding: 20px;
        border: 1px solid var(--border-color, #e0e0e0);
        border-radius: 8px;
    }

    .checkbox-wrapper {
        display: flex;
        align-items: center;
        gap: 10px;
        cursor: pointer;
        font-size: 14px;
        font-weight: 500;
        color: var(--text-primary, #333);
        user-select: none;
        padding: 5px;
        border-radius: 4px;
        transition: background 0.2s;
    }

        .checkbox-wrapper:hover {
            background: var(--bg-secondary, #f8f9fa);
        }

        .checkbox-wrapper input {
            width: 18px;
            height: 18px;
            cursor: pointer;
            accent-color: var(--primary, #2ECC71);
        }
        /* Style khi bị khóa (disabled) */
        .checkbox-wrapper.disabled {
            opacity: 0.5;
            cursor: not-allowed;
            text-decoration: line-through;
            color: #999;
        }
</style>

<div class="page-container">
    <div class="page-content active">
        <div class="dashboard-grid">
            <div class="recent-activities" style="grid-column: 1 / -1;">

                <div class="card-header">
                    <h2>Nhập món ăn</h2>
                </div>

                <form asp-action="Create" method="post" class="modal-form" style="padding: 0;">
                    <div asp-validation-summary="ModelOnly" class="text-danger" style="margin-bottom: 20px;"></div>

                    <div class="detail-section">
                        <h3>1. Thông tin chung</h3>

                        <div class="form-row">
                            <div class="form-group">
                                <label asp-for="Name">Tên món ăn <span style="color: var(--primary);">*</span></label>
                                <input asp-for="Name" placeholder="Ví dụ: Cơm tấm sườn bì" required />
                                <span asp-validation-for="Name" style="color: #e74c3c; font-size: 12px;"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Category">Danh mục <span style="color: var(--primary);">*</span></label>

                                <select asp-for="Category" class="form-control" style="height: 45px;" required>

                                    <option value="">-- Vui lòng chọn loại món --</option>

                                    <option value="Món Salad">🥗 Món Salad</option>
                                    <option value="Món mặn">🍗 Món mặn</option>
                                    <option value="Tinh bột">🍚 Tinh bột (Cơm/Bún)</option>
                                    <option value="Món nước">🍜 Món nước (Canh/Súp)</option>
                                    <option value="Tráng miệng">🍰 Tráng miệng</option>
                                    <option value="Đồ uống">🥤 Đồ uống</option>
                                </select>

                                <span asp-validation-for="Category" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="ImageUrl">Link hình ảnh (URL)</label>
                            <input asp-for="ImageUrl" placeholder="https://example.com/image.jpg" />
                            <span asp-validation-for="ImageUrl" style="color: #e74c3c; font-size: 12px;"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Description">Mô tả chi tiết</label>
                            <textarea asp-for="Description" placeholder="Mô tả thành phần, hương vị món ăn..."></textarea>
                            <span asp-validation-for="Description" style="color: #e74c3c; font-size: 12px;"></span>
                        </div>
                    </div>

                    <div class="detail-section" style="margin-top: 30px;">
                        <h3>2. Thông tin dinh dưỡng (Trên 1 khẩu phần)</h3>

                        <div class="nutrition-grid">
                            <div class="nutrition-item">
                                <span class="nutrition-label">Calories (kcal)</span>
                                <div class="form-group" style="margin-bottom: 0;">
                                    <input asp-for="Nutrition.Calories" type="number" step="0.1" placeholder="0" style="text-align: center; font-weight: bold; color: var(--primary);" />
                                </div>
                            </div>

                            <div class="nutrition-item">
                                <span class="nutrition-label">Protein (g)</span>
                                <div class="form-group" style="margin-bottom: 0;">
                                    <input asp-for="Nutrition.Protein" type="number" step="0.1" placeholder="0" style="text-align: center;" />
                                </div>
                            </div>

                            <div class="nutrition-item">
                                <span class="nutrition-label">Carbs (g)</span>
                                <div class="form-group" style="margin-bottom: 0;">
                                    <input asp-for="Nutrition.Carbs" type="number" step="0.1" placeholder="0" style="text-align: center;" />
                                </div>
                            </div>

                            <div class="nutrition-item">
                                <span class="nutrition-label">Fats (g)</span>
                                <div class="form-group" style="margin-bottom: 0;">
                                    <input asp-for="Nutrition.Fats" type="number" step="0.1" placeholder="0" style="text-align: center;" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="detail-section" style="margin-top: 30px;">
                        <h3>3. Phân loại & Thuộc tính</h3>

                        <div class="form-group">
                            <label style="margin-bottom: 15px;">Bữa ăn phù hợp (Có thể chọn nhiều)</label>
                            <div style="display: flex; gap: 20px; flex-wrap: wrap;">
                                <label style="display: flex; align-items: center; gap: 8px; font-weight: 500; cursor: pointer;">
                                    <input type="checkbox" name="selectedMealTypes" value="Bữa Sáng" style="width: auto;"> 🍳 Bữa Sáng
                                </label>
                                <label style="display: flex; align-items: center; gap: 8px; font-weight: 500; cursor: pointer;">
                                    <input type="checkbox" name="selectedMealTypes" value="Bữa Trưa" style="width: auto;"> 🍱 Bữa Trưa
                                </label>
                                <label style="display: flex; align-items: center; gap: 8px; font-weight: 500; cursor: pointer;">
                                    <input type="checkbox" name="selectedMealTypes" value="Bữa Tối" style="width: auto;"> 🍲 Bữa Tối
                                </label>
                                <label style="display: flex; align-items: center; gap: 8px; font-weight: 500; cursor: pointer;">
                                    <input type="checkbox" name="selectedMealTypes" value="Bữa Phụ" style="width: auto;"> 🍎 Bữa Phụ
                                </label>
                            </div>
                        </div>

                        <div class="form-group" style="margin-top: 25px;">
                            <label style="margin-bottom: 10px; display:block; font-weight:600;">Tags (Đặc điểm món ăn)</label>

                            <div class="checkbox-grid">
                                <label class="checkbox-wrapper">
                                    <input type="checkbox" name="selectedTags" value="Lành mạnh"> 🌿 Lành mạnh
                                </label>
                                <label class="checkbox-wrapper">
                                    <input type="checkbox" name="selectedTags" value="Ít tinh bột"> 📉 Ít tinh bột
                                </label>
                                <label class="checkbox-wrapper">
                                    <input type="checkbox" name="selectedTags" value="Chế độ Keto"> 🥓 Chế độ Keto
                                </label>
                                <label class="checkbox-wrapper">
                                    <input type="checkbox" name="selectedTags" value="Giàu đạm"> 💪 Giàu đạm
                                </label>
                                <label class="checkbox-wrapper">
                                    <input type="checkbox" name="selectedTags" value="Ít Calo"> 🔥 Ít Calo
                                </label>
                                <label class="checkbox-wrapper">
                                    <input type="checkbox" name="selectedTags" value="Không chứa Gluten"> 🌾 Không chứa Gluten
                                </label>

                                <div style="grid-column: 1 / -1; height: 1px; background: #eee; margin: 5px 0;"></div>

                                <label class="checkbox-wrapper">
                                    <input type="checkbox" name="selectedTags" value="Thuần chay" id="tagVegan"> 🥦 Thuần chay
                                </label>
                                <label class="checkbox-wrapper">
                                    <input type="checkbox" name="selectedTags" value="Ăn chay có trứng/sữa" id="tagVegetarian"> 🥚 Ăn chay (Trứng/Sữa)
                                </label>
                            </div>
                        </div>

                        <div class="form-group" style="margin-top: 25px;">
                            <label>Đơn vị tính (Units)</label>
                            <input name="strUnits" placeholder="VD: Tô, Dĩa, Chén... (ngăn cách bằng dấu phẩy)" />
                        </div>
                    </div>

                    <div class="form-actions" style="border-top: 1px solid var(--border-color-light, #e0e0e0); padding-top: 20px; margin-top: 30px;">
                        <a asp-action="Index" class="btn btn-secondary" style="text-decoration: none;">
                            Quay lại
                        </a>
                        <button type="submit" class="btn btn-primary">
                            Lưu Món Ăn
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const cbVegan = document.getElementById('tagVegan');
            const cbVegetarian = document.getElementById('tagVegetarian');

            if (cbVegan && cbVegetarian) {
                // Khi chọn Thuần chay
                cbVegan.addEventListener('change', function() {
                    if (this.checked) {
                        cbVegetarian.checked = false;      // Bỏ tick cái kia
                        cbVegetarian.disabled = true;      // Khóa cái kia lại
                        cbVegetarian.parentElement.classList.add('disabled'); // Làm mờ text
                    } else {
                        cbVegetarian.disabled = false;     // Mở khóa
                        cbVegetarian.parentElement.classList.remove('disabled');
                    }
                });

                // Khi chọn Ăn chay có trứng/sữa
                cbVegetarian.addEventListener('change', function() {
                    if (this.checked) {
                        cbVegan.checked = false;
                        cbVegan.disabled = true;
                        cbVegan.parentElement.classList.add('disabled');
                    } else {
                        cbVegan.disabled = false;
                        cbVegan.parentElement.classList.remove('disabled');
                    }
                });
            }
        });
    </script>
}