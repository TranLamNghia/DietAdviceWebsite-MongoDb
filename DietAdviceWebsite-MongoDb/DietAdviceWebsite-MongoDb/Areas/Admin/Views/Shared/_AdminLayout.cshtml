<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Quản trị hệ thống</title>
    <link rel="stylesheet" href="~/css/admin-styles.css">
</head>
<body>
    <div class="admin-container">
        <aside class="sidebar">
            <div class="sidebar-header">
                <div class="logo">
                    <span class="logo-icon">🍎</span>
                    <span class="logo-text">Nutrition</span>
                </div>
                <button class="sidebar-toggle" onclick="toggleSidebar()">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <line x1="3" y1="6" x2="21" y2="6"></line>
                        <line x1="3" y1="12" x2="21" y2="12"></line>
                        <line x1="3" y1="18" x2="21" y2="18"></line>
                    </svg>
                </button>
            </div>

            <nav class="sidebar-nav">
                <div class="nav-section">
                    <a class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Index" ? "active" : "")"
                       asp-area="Admin" asp-controller="Home" asp-action="Index" style="text-decoration: none;">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <rect x="3" y="3" width="7" height="7"></rect>
                            <rect x="14" y="3" width="7" height="7"></rect>
                            <rect x="14" y="14" width="7" height="7"></rect>
                            <rect x="3" y="14" width="7" height="7"></rect>
                        </svg>
                        <span>Dashboard</span>
                    </a>

                    <a class="nav-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Meal" ? "active" : "")"
                       asp-area="Admin"
                       asp-controller="Meal"
                       asp-action="Index"
                       style="text-decoration: none;">
    
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="M6 9l12 0"></path>
                            <path d="M6 20h12a2 2 0 0 0 2 -2v-11a2 2 0 0 0 -2 -2h-12a2 2 0 0 0 -2 2v11a2 2 0 0 0 2 2"></path>
                            <path d="M6 15h12"></path>
                        </svg>
    
                        <span>Quản lý Món ăn</span>
                    </a>

                    <a class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Index" ? "active" : "")"
                      asp-area="Admin" asp-controller="Account" asp-action="Index" style="text-decoration: none;">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="M20 21v-2a4 4 0 0 0 -4 -4h-12a4 4 0 0 0 -4 4v2"></path>
                            <circle cx="9" cy="7" r="4"></circle>
                            <circle cx="19" cy="11" r="3"></circle>
                        </svg>
                        <span>Người dùng</span>
                    </a>
                </div>

                <div class="nav-section">
                    <p class="nav-section-title">Cài đặt</p>

                    <form asp-area="" asp-controller="Account" asp-action="Logout" method="get" style="width: 100%;">
                        <button type="submit" class="nav-item" style="width: 100%; text-align: left; background: none; border: none;">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path d="M9 21H5a2 2 0 0 1 -2 -2V5a2 2 0 0 1 2 -2h4"></path>
                                <polyline points="16 17 21 12 16 7"></polyline>
                                <line x1="21" y1="12" x2="9" y2="12"></line>
                            </svg>
                            <span>Đăng xuất</span>
                        </button>
                    </form>
                </div>
            </nav>
        </aside>

        <main class="main-content">
            <header class="header">
                <div class="header-left">
                    <button class="menu-toggle" onclick="toggleSidebar()">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <line x1="3" y1="6" x2="21" y2="6"></line>
                            <line x1="3" y1="12" x2="21" y2="12"></line>
                            <line x1="3" y1="18" x2="21" y2="18"></line>
                        </svg>
                    </button>
                    <h1 class="page-title">@ViewData["Title"]</h1>
                </div>
                <div class="header-right">
                    <div class="user-menu">
                        <img src="https://api.dicebear.com/7.x/avataaars/svg?seed=admin" alt="User Avatar" class="avatar">
                        <span class="user-name">@User.Identity.Name</span>
                    </div>
                </div>
            </header>

            <div class="page-container">
                <div class="page-content active" style="display: block;">
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>

    <script src="~/js/admin-script.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>