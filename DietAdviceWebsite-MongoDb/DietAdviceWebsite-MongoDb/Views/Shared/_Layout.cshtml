@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    // 1. Lấy tên Controller và Action hiện tại
    var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();

    // 2. Kiểm tra xem có phải trang Login không
    // Lưu ý: So sánh chuỗi phân biệt hoa thường, hãy chắc chắn tên Controller là "Account"
    bool isHiddenPage = (currentController == "Account" &&
                    (currentAction == "Login" || currentAction == "Register"));
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DietAdviceWebsite_MongoDb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DietAdviceWebsite_MongoDb.styles.css" asp-append-version="true" />
</head>
<body>

    @if (!isHiddenPage)
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand fw-bold text-success" asp-area="" asp-controller="Home" asp-action="Index">
                        Diet Advice
                    </a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <div class="d-flex ms-auto">
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <a asp-controller="Account" asp-action="Login" class="btn btn-outline-success me-2">Đăng nhập</a>
                                <a asp-controller="Account" asp-action="Register" class="btn btn-success">Đăng ký</a>
                            }
                            else
                            {
                                <div class="d-flex align-items-center">
                                    <span class="me-3 text-success fw-bold">
                                        @User.Identity.Name
                                    </span>
                                    <form asp-controller="Account" asp-action="Logout" method="get" class="d-inline">
                                        <button type="submit" class="btn btn-outline-danger">Đăng xuất</button>
                                    </form>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </nav>
        </header>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>